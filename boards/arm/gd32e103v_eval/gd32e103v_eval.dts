/dts-v1/;

#include <gigadevice/e1/gd32e103Xb.dtsi>
#include <gd/e1/gd32e103v(8-b)tx-pinctrl.dtsi>

/ {
	model = "GigaDevice GD32E103VB-EVAL board";
	compatible = "gigadevice,gd32e103vb-eval";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		yellow_led0: led_0 {
			gpios = <&gpioc 0 GPIO_ACTIVE_HIGH>;
			label = "User LD2";
		};
		yellow_led1: led_1 {
			gpios = <&gpioc 2 GPIO_ACTIVE_HIGH>;
			label = "User LD3";
		};
		yellow_led2: led_2 {
			gpios = <&gpioe 0 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		yellow_led3: led_3 {
			gpios = <&gpioe 1 GPIO_ACTIVE_HIGH>;
			label = "User LD5";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		wakeup_key: button0 {
			label = "Wakeup";
			gpios = <&gpioa 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
		};
		tamper_key: button1 {
			label = "Tamper";
			gpios = <&gpioc 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
		};
		user_key: button2 {
			label = "User Key";
			gpios = <&gpiob 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
		};
	};

	aliases {
		led0 = &yellow_led0;
		sw0 = &user_key;
	};
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set 2Kb of storage at the end of the 128Kb of flash */
		storage_partition: partition@1f800 {
			label = "storage";
			reg = <0x0001f800 0x00000800>;
		};
	};
};

&clk_hse {
	status = "okay";
	clock-frequency = <DT_FREQ_M(8)>;
};

&pll {
	status = "okay";
	clocks = <&clk_hse>;
	prediv = <2>;
	mul = <27>;
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(108)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <2>;
	apb2-prescaler = <1>;
};
